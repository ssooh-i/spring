<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:c="http://www.springframework.org/schema/c"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

<!-- XML네임스페이스를 이용한 프로퍼티 설정방법 -->
<bean id="developer" class="sample7.Developer"  c:emp-ref="emp1" c:dept="개발1팀"/>
<bean id="engineer" class="sample7.Engineer"  c:emp-ref="emp2"  c:dept="기술1팀"/>

<bean id="emp1" class="sample7.Emp" c:name="강호동" c:salary="1500000"/>
<bean id="emp2" class="sample7.Emp" c:name="이순신" c:salary="2500000"/>
</beans>
<!-- 
	Spring bean configuration File에서
	beans, c, p체크
 -->
 
 
 
 
 
 
 
 
 
 